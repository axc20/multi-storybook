{
  "name": "multi-storybook",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">= 16.14.0",
    "yarn": "^1.22"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "presb:notes": "node tools/generateNotesMdx.mjs",
    "sb:notes": "start-storybook -c packages/notes/.storybook -p 4700 --quiet",
    "sb:react": "yarn --cwd ./packages/react dev",
    "sb:svelte": "node node_modules/@storybook/svelte/bin -c packages/svelte/.storybook -p 4800 --quiet",
    "deploy": "storybook-to-ghpages --packages packages -o=./storybook-static",
    "postdeploy": "node tools/cleanup.mjs",
    "start": "http-server storybook-static",
    "wasteland:eslint": "TIMING=1 eslint the-wasteland",
    "wasteland:eslint:ci": "eslint the-wasteland --format=html --output-file=the-wasteland/eslintReport.html"
  },
  "devDependencies": {
    "husky": "8.0.1",
    "lint-staged": "12.4.2"
  },
  "lint-staged": {},
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
